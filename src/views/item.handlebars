<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12">
            <a href="/" class="btn btn-secondary shadow-sm">&larr; Atrás</a>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-start">
        <div class="w-75"> 
            <div class="row">
                <div class="col-12 text-center mb-4">
                    <h1 class="display-4">{{product.titulo}}</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 text-center">
                    <img src="{{product.imagen}}" class="img-fluid rounded shadow-sm" style="max-height: 400px; object-fit: cover;">
                </div>

                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Detalles del Producto</h5>
                            <p class="card-text">{{product.description}}</p>
                            <hr>
                            <p class="mb-1"><strong>Precio:</strong> ${{product.precio}}</p>
                            {{#if product.descuento}}
                                <p class="mb-1 text-success"><strong>Precio con Descuento:</strong> ${{product.precioDescuento}}</p>
                            {{/if}}
                            <p class="mb-1"><strong>Stock:</strong> {{product.stock}} disponibles</p>
                            <p><strong>Categoría:</strong> {{product.categoria}}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12 text-center">
                    <button class="btn btn-primary btn-lg shadow-sm" onclick="agregarProducto('{{product._id}}', 1)">Agregar al Carro</button>
                </div>
            </div>
        </div>

        <div id="seccionCarrito" class="ms-4 p-3 border rounded bg-light" style="min-width: 300px; max-width: 300px;">
            <div id="detalleCarrito"></div>
        </div>
    </div>
</div>

<script src="/js/index.js"></script>
